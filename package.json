  "author": {
    "name": "Luca Ciucci",
    "email" : "develop@lucaciucci99.com"
  },
  "dependencies": {
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "css-modules-typescript-loader": "latest",
    "file-loader": "latest",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "latest",
    "typescript-declaration-webpack-plugin": "latest",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "latest",
